<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="sol_category">
	<typeAlias alias="CatetoryDTO" type="kr.co.solproject.category.CategoryDTO" />

	<select id="checkCateinfo" resultClass="String" parameterClass="Map" >
		select categoryinfo
		from sol_category
		where grade = #grade# and gwamok = #gwamok#
	</select>
	
	<update id="cateIns" parameterClass="CategoryDTO">
		insert into sol_category(grade, gwamok,teacherName,teacherPhoto,teacherCareer,categoryinfo,bookInfo)
		values(#grade#,#gwamok#,#teacherName#,#teacherPhoto#,#teacherCareer#,#categoryinfo#,#bookInfo#)
	</update>
	
	<select id="readCateInfo" parameterClass="Map" resultClass="CategoryDTO">
		SELECT categoryno, grade, gwamok, categoryinfo, teacherName, teacherPhoto, teacherCareer,bookInfo
		FROM sol_category
		limit #sno#, #numPerPage#
	</select>
	
	<select id="getCateTotal" parameterClass="Map" resultClass="Integer">
		select count(*) as cnt
		from sol_category
	</select>
		
</sqlMap>